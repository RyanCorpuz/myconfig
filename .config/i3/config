# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf 
	position top
	colors {
		background $bg-color
		separator #757575
		#			border			background		text
		focused_workspace	$inactive-bg-color	$text-color		$bg-color
		inactive_workspace	$bg-color		$bg-color		$text-color
		urgent_workspace	$urgent-bg-color	$urgent-bg-color	$text-color
	}
}

bindsym $mod+shift+x exec i3lock -i ~/Pictures/Wallpaper/wallpaper.png

# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 15 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 15 # decrease screen brightness

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ unmute && pkill -RTMIN+2 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- unmute && pkill -RTMIN+2 i3blocks #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle && pkill -RTMIN+2 i3blocks # mute sound


